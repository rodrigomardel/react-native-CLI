{
  "name": "react-native-cli-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "01-react-foundation",
    "02-my-first-app"
  ],
  "scripts": {
    "web": "npm run dev --workspace=01-react-foundation",
    "mobile": "npm run android --workspace=02-my-first-app",
    "mobile:ios": "npm run ios --workspace=02-my-first-app",
    "start:web": "npm run start --workspace=01-react-foundation",
    "start:mobile": "npm run start --workspace=02-my-first-app",
    "build:web": "npm run build --workspace=01-react-foundation",
    "build:mobile": "npm run build --workspace=02-my-first-app",
    "test:web": "npm run test --workspace=01-react-foundation",
    "test:mobile": "npm run test --workspace=02-my-first-app",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
